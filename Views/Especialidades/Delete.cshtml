@model Sistema_de_Gestion_de_Citas_Medicas.ViewModels.EspecialidadCreateVM

@{
    ViewData["Title"] = "Eliminar Especialidad";
}

@section Styles {
    <link rel="stylesheet" href="~/css/especialidades.css" />
    
}

<div class="container-fluid py-4 citas-page">

    
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h1 class="page-title mb-1">Eliminar Especialidad</h1>
            <p class="page-subtitle mb-0">Confirma si deseas eliminar esta especialidad</p>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary btn-pill">
            <i class="bi bi-arrow-left me-2"></i> Volver
        </a>
    </div>

    <div class="panel-card">
        
        <div class="panel-toolbar">
            <div class="d-flex align-items-center gap-2">
                <span class="stat-icon soft-warning" style="width:42px;height:42px;">
                    <i class="bi bi-exclamation-triangle"></i>
                </span>
                <div>
                    <div class="stat-label">Acción irreversible</div>
                    <div class="stat-value" style="font-size: 1.05rem;">Vas a eliminar la especialidad seleccionada</div>
                </div>
            </div>

            <div>
                @if (Model.Activa)
                {
                    <span class="badge-pill badge-success">Activa</span>
                }
                else
                {
                    <span class="badge-pill badge-warning">Inactiva</span>
                }
            </div>
        </div>

        <!-- Body -->
        <div class="p-3 p-md-4">
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <div class="stat-card" style="height:100%;">
                        <div style="min-width:0;">
                            <div class="stat-label">Nombre</div>
                            <div class="stat-value" style="font-size:1.1rem;">
                                <i class="bi bi-heart-pulse me-2 text-muted"></i>@Model.Nombre
                            </div>
                        </div>
                        <div class="stat-icon soft-purple"><i class="bi bi-heart-pulse"></i></div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="stat-card" style="height:100%;">
                        <div>
                            <div class="stat-label">Código</div>
                            <div class="stat-value" style="font-size:1.1rem;">
                                <i class="bi bi-hash me-2 text-muted"></i>@Model.Id
                            </div>
                        </div>
                        <div class="stat-icon soft-primary"><i class="bi bi-hash"></i></div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="stat-card">
                        <div style="min-width:0;">
                            <div class="stat-label">Descripción</div>
                            <div class="stat-value" style="font-size:1.05rem; font-weight:600;">
                                <i class="bi bi-card-text me-2 text-muted"></i>
                                @(string.IsNullOrWhiteSpace(Model.Descripcion) ? "—" : Model.Descripcion)
                            </div>
                        </div>
                        <div class="stat-icon soft-success"><i class="bi bi-card-text"></i></div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="alert alert-warning mb-0" role="alert" style="border-radius: 14px;">
                        <i class="bi bi-info-circle me-2"></i>
                        Esta acción eliminará la especialidad del sistema. Si deseas conservarla, puedes cancelar.
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer / Actions -->
        <div class="panel-footer">
            <small class="text-muted">Especialidad #@Model.Id</small>

            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary btn-pill">
                    <i class="bi bi-x-lg me-2"></i> Cancelar
                </a>

                <form asp-action="DeleteConfirmed" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />

                    <button type="submit" class="btn btn-dark btn-pill">
                        <i class="bi bi-trash me-2"></i> Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
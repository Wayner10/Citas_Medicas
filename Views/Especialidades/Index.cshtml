@model List<Sistema_de_Gestion_de_Citas_Medicas.ViewModels.EspecialidadCreateVM>

@{
    ViewData["Title"] = "Listado de Especialidades";

    var total = Model?.Count ?? 0;
    var activas = Model?.Count(x => x.Activa) ?? 0;
    var inactivas = total - activas;
}

@section Styles {
    <link rel="stylesheet" href="~/css/especialidades.css" asp-append-version="true" />
}

<div class="container-fluid py-4 especialidades-page">

    
    <div class="mb-4">
        <h1 class="page-title mb-1">Listado de Especialidades</h1>
        <p class="page-subtitle mb-0">Visualización general de especialidades médicas</p>
    </div>

    
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-4">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Total</div>
                    <div class="stat-value">@total</div>
                </div>
                <div class="stat-icon soft-primary">
                    <i class="bi bi-collection"></i>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Activas</div>
                    <div class="stat-value text-success">@activas</div>
                </div>
                <div class="stat-icon soft-success">
                    <i class="bi bi-check2-circle"></i>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Inactivas</div>
                    <div class="stat-value text-danger">@inactivas</div>
                </div>
                <div class="stat-icon soft-warning">
                    <i class="bi bi-x-circle"></i>
                </div>
            </div>
        </div>
    </div>

   
    <div class="panel-card">

        <div class="table-responsive">
            <table class="table table-modern mb-0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th class="text-center">Estado</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model == null || Model.Count == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-center py-4 text-muted">
                                No hay especialidades registradas todavía.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var e in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@e.Nombre</td>

                                <td class="text-truncate" style="max-width: 420px;">
                                    @(string.IsNullOrWhiteSpace(e.Descripcion) ? "—" : e.Descripcion)
                                </td>

                                <td class="text-center">
                                    @if (e.Activa)
                                    {
                                        <span class="badge-pill badge-success">Activa</span>
                                    }
                                    else
                                    {
                                        <span class="badge-pill badge-warning">Inactiva</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

   
        <div class="panel-footer">
            <small class="text-muted">
                Mostrando @total especialidades registradas
            </small>
        </div>
    </div>
</div>
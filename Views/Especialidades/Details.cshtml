@model Sistema_de_Gestion_de_Citas_Medicas.ViewModels.EspecialidadCreateVM

@{
    ViewData["Title"] = "Detalle de Especialidad";
}

@section Styles {
    <link rel="stylesheet" href="~/css/especialidades.css" asp-append-version="true" />
}

<div class="container-fluid py-4 especialidades-page">

    <div class="d-flex align-items-start justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h1 class="page-title mb-1">Detalle de la Especialidad</h1>
            <p class="page-subtitle mb-0">Información completa de la especialidad seleccionada</p>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-pill">
                <i class="bi bi-pencil me-2"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-pill">
                <i class="bi bi-arrow-left me-2"></i> Volver
            </a>
        </div>
    </div>

    <div class="panel-card p-4">
        <div class="row g-3">

            <div class="col-12 col-md-6">
                <div class="detail-item">
                    <div class="detail-label">Nombre</div>
                    <div class="detail-value">@Model.Nombre</div>
                </div>
            </div>

            <div class="col-12">
                <div class="detail-item">
                    <div class="detail-label">Descripción</div>
                    <div class="detail-value">@Model.Descripcion</div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="detail-item">
                    <div class="detail-label">Estado</div>
                    <div class="detail-value">
                        @if (Model.Activa)
                        {
                            <span class="badge-pill badge-success">Activa</span>
                        }
                        else
                        {
                            <span class="badge-pill badge-warning">Inactiva</span>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Inicio";
}

<div class="page-shell">

    <div class="mb-4">
        <div class="page-title">Panel principal</div>
        <p class="page-subtitle mb-0">
            Gestiona pacientes, doctores, especialidades y citas desde un solo lugar.
        </p>
    </div>

    <!-- ===== STATS ===== -->
    <div class="row g-3 mb-4">

        <!-- Pacientes -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Pacientes</div>
                        <div class="stat-value text-blue">0</div>
                    </div>
                    <div class="stat-icon soft-blue">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Doctores -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Doctores</div>
                        <div class="stat-value text-green">0</div>
                    </div>
                    <div class="stat-icon soft-green">
                        <i class="bi bi-person-badge"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Citas -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Citas</div>
                        <div class="stat-value text-orange">0</div>
                    </div>
                    <div class="stat-icon soft-orange">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Especialidades -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Especialidades</div>
                        <div class="stat-value text-purple">0</div>
                    </div>
                    <div class="stat-icon soft-purple">
                        <i class="bi bi-heart-pulse"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- ===== QUICK ACTIONS ===== -->
    <div class="quick-actions mb-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="fw-bold mb-0">Acciones rápidas</h5>
            <span class="text-secondary small">
                Atajos para registrar más rápido
            </span>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-primary" asp-controller="Pacientes" asp-action="Create">
                <i class="bi bi-person-plus me-1"></i> Nuevo paciente
            </a>

            <a class="btn btn-outline-primary" asp-controller="Citas" asp-action="Create">
                <i class="bi bi-calendar-plus me-1"></i> Nueva cita
            </a>

            <a class="btn btn-outline-primary" asp-controller="Doctores" asp-action="Create">
                <i class="bi bi-person-badge-fill me-1"></i> Nuevo doctor
            </a>

            <a class="btn btn-outline-primary" asp-controller="Especialidades" asp-action="Create">
                <i class="bi bi-plus-circle me-1"></i> Nueva especialidad
            </a>
        </div>
    </div>

    <!-- ===== PRÓXIMAS CITAS ===== -->
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold mb-0">Próximas citas</h5>

                <a class="small text-decoration-none" asp-controller="Citas" asp-action="Index">
                    Ver todas <i class="bi bi-arrow-right"></i>
                </a>
            </div>

            <div class="table-wrap">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Paciente</th>
                            <th>Doctor</th>
                            <th style="width: 140px;">Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-secondary">—</td>
                            <td class="text-secondary">Aún no hay citas registradas.</td>
                            <td class="text-secondary">—</td>
                            <td>
                                <span class="badge-soft pending">Pendiente</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>
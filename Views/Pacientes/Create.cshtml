@model Sistema_de_Gestion_de_Citas_Medicas.ViewModels.PacienteCreateVM

@{
    ViewData["Title"] = "Nuevo Paciente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pacientes.css" asp-append-version="true" />
}

<div class="container-fluid py-4 pacientes-page">

   
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h1 class="page-title mb-1">Nuevo Paciente</h1>
            <p class="page-subtitle mb-0">Completa los datos para registrar un paciente</p>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary btn-pill">
            <i class="bi bi-arrow-left me-2"></i> Volver
        </a>
    </div>

   
    <div class="panel-card">
        <div class="panel-toolbar">
            <div class="d-flex align-items-center gap-2">
                <span class="stat-icon soft-primary">
                    <i class="bi bi-person-plus"></i>
                </span>
                <div>
                    <div class="fw-bold">Información del paciente</div>
                    <small class="text-muted">Campos obligatorios marcados con *</small>
                </div>
            </div>
        </div>

        <div class="p-4">
           
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <form asp-action="Create" method="post" autocomplete="off" class="form-modern">
                <div class="row g-3">

                    <div class="col-12 col-md-6">
                        <label asp-for="Nombre" class="form-label">
                            Nombre <span class="req">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-person"></i>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Juan" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Apellido" class="form-label">
                            Apellido <span class="req">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-person-badge"></i>
                            <input asp-for="Apellido" class="form-control" placeholder="Ej: Pérez" />
                        </div>
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Cedula" class="form-label">
                            Cédula <span class="req">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-card-text"></i>
                            <input asp-for="Cedula" class="form-control" placeholder="Ej: 1-2345-6789" />
                        </div>
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Telefono" class="form-label">
                            Teléfono <span class="req">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-telephone"></i>
                            <input asp-for="Telefono" class="form-control" placeholder="Ej: 8888-8888" />
                        </div>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="FechaNacimiento" class="form-label">
                            Fecha de nacimiento <span class="req">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-calendar-event"></i>
                            <input asp-for="FechaNacimiento" type="date" class="form-control" />
                        </div>
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label d-block">Estado</label>

                        <div class="ios-toggle">
                            <input asp-for="Activo" class="ios-toggle__input" />
                            <label asp-for="Activo" class="ios-toggle__track">
                                <span class="ios-toggle__thumb"></span>
                            </label>
                            <span class="ios-toggle__text">Paciente activo</span>
                        </div>
                        <span asp-validation-for="Activo" class="text-danger"></span>
                    </div>

                </div>

                <hr class="my-4" />

                <div class="d-flex flex-wrap gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-pill">
                        <i class="bi bi-x-circle me-2"></i> Cancelar
                    </a>

                    <button type="submit" class="btn btn-success btn-pill">
                        <i class="bi bi-save me-2"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
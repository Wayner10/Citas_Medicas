@{
    ViewData["Title"] = "Gestión de Pacientes";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pacientes.css" />
}

<div class="container-fluid py-4 pacientes-page">

    
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h1 class="page-title mb-1">Gestión de Pacientes</h1>
            <p class="page-subtitle mb-0">Administra y visualiza la información de tus pacientes</p>
        </div>

        <a asp-action="Create" class="btn btn-dark btn-pill">
            <i class="bi bi-person-plus me-2"></i> Nuevo Paciente
        </a>
    </div>

    
    <div class="row g-3 mb-3">
        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Total Pacientes</div>
                    <div class="stat-value">4</div>
                </div>
                <div class="stat-icon soft-primary"><i class="bi bi-people"></i></div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Activos</div>
                    <div class="stat-value text-success">3</div>
                </div>
                <div class="stat-icon soft-success"><i class="bi bi-telephone"></i></div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Inactivos</div>
                    <div class="stat-value text-danger">1</div>
                </div>
                <div class="stat-icon soft-warning"><i class="bi bi-envelope"></i></div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Nuevos (Mes)</div>
                    <div class="stat-value text-purple">12</div>
                </div>
                <div class="stat-icon soft-purple"><i class="bi bi-person-plus"></i></div>
            </div>
        </div>
    </div>

    
    <div class="panel-card">
        
        <div class="panel-toolbar">
            <div class="searchbox">
                <i class="bi bi-search"></i>
                <input class="form-control" placeholder="Buscar por nombre, cédula o correo..." />
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary btn-pill">
                    <i class="bi bi-funnel me-2"></i> Filtros
                </button>
                <button class="btn btn-outline-secondary btn-pill">
                    <i class="bi bi-download me-2"></i> Exportar
                </button>
            </div>
        </div>

        
        <div class="table-responsive">
            <table class="table table-modern mb-0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Cédula</th>
                        <th>Teléfono</th>
                        <th>Correo</th>
                        <th class="text-center">Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>

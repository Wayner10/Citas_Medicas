@model List<Sistema_de_Gestion_de_Citas_Medicas.Models.DoctorCreateVM>

@{
    ViewData["Title"] = "Gestión de Doctores";
}

@section Styles {
    <link rel="stylesheet" href="~/css/doctores.css" asp-append-version="true" />
}

<div class="container-fluid py-4 doctores-page">

    <!-- Header -->
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h1 class="page-title mb-1">Gestión de Doctores</h1>
            <p class="page-subtitle mb-0">Administra y visualiza la información de tus doctores</p>
        </div>

        <a asp-action="Create" class="btn btn-dark btn-pill">
            <i class="bi bi-person-plus me-2"></i> Nuevo Doctor
        </a>
    </div>

    <!-- Stats (mock) -->
    @{
        var total = Model?.Count ?? 0;
        var activos = Model?.Count(x => x.Activo) ?? 0;
        var inactivos = total - activos;
        var nuevosMes = 5; // mock
    }

    <div class="row g-3 mb-3">
        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Total Doctores</div>
                    <div class="stat-value">@total</div>
                </div>
                <div class="stat-icon soft-primary"><i class="bi bi-people"></i></div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Activos</div>
                    <div class="stat-value text-success">@activos</div>
                </div>
                <div class="stat-icon soft-success"><i class="bi bi-person-check"></i></div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Inactivos</div>
                    <div class="stat-value text-danger">@inactivos</div>
                </div>
                <div class="stat-icon soft-warning"><i class="bi bi-person-x"></i></div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Nuevos (Mes)</div>
                    <div class="stat-value text-purple">@nuevosMes</div>
                </div>
                <div class="stat-icon soft-purple"><i class="bi bi-person-plus"></i></div>
            </div>
        </div>
    </div>

    <!-- Panel tabla -->
    <div class="panel-card">
        <!-- Toolbar -->
        <div class="panel-toolbar">
            <div class="searchbox">
                <i class="bi bi-search"></i>
                <input class="form-control" placeholder="Buscar por nombre, MED, especialidad o teléfono..." />
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary btn-pill" type="button">
                    <i class="bi bi-funnel me-2"></i> Filtros
                </button>
                <button class="btn btn-outline-secondary btn-pill" type="button">
                    <i class="bi bi-download me-2"></i> Exportar
                </button>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-modern mb-0">
                <thead>
                    <tr>
                        <th>Doctor</th>
                        <th>Med</th>
                        <th>Especialidad</th>
                        <th>Teléfono</th>
                        <th>Correo</th>
                        <th class="text-center">Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                No hay doctores para mostrar (mock).
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var d in Model)
                        {
                            <tr>
                                <td class="fw-semibold">Dr(a). @d.Nombre @d.Apellido</td>
                                <td>@d.CodigoMed</td>
                                <td><i class="bi bi-heart-pulse me-2 text-muted"></i>@d.Especialidad</td>
                                <td><i class="bi bi-telephone me-2 text-muted"></i>@d.Telefono</td>
                                <td><i class="bi bi-envelope me-2 text-muted"></i>@d.Correo</td>

                                <td class="text-center">
                                    @if (d.Activo)
                                    {
                                        <span class="badge-pill badge-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge-pill badge-warning">Inactivo</span>
                                    }
                                </td>

                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@d.DoctorId" class="icon-btn" title="Ver">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@d.DoctorId" class="icon-btn warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button class="icon-btn danger" title="Eliminar" type="button">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- Footer -->
        <div class="panel-footer">
            <small class="text-muted">Mostrando @total de @total doctores</small>

            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary btn-sm btn-pill" disabled type="button">Anterior</button>
                <button class="btn btn-outline-secondary btn-sm btn-pill" type="button">Siguiente</button>
            </div>
        </div>
    </div>
</div>
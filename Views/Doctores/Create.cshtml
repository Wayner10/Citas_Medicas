@model Sistema_de_Gestion_de_Citas_Medicas.Models.DoctorCreateVM

@{
    ViewData["Title"] = "Nuevo Doctor";
}

@section Styles {
    <link rel="stylesheet" href="~/css/doctores.css" asp-append-version="true" />
}

<div class="container-fluid py-4 doctores-page">

    <!-- Header igual al Index -->
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h1 class="page-title mb-1">Nuevo Doctor</h1>
            <p class="page-subtitle mb-0">Completa los datos para registrar un doctor</p>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary btn-pill">
            <i class="bi bi-arrow-left me-2"></i> Volver
        </a>
    </div>

    <!-- Panel -->
    <div class="panel-card">
        <div class="panel-toolbar">
            <div class="d-flex align-items-center gap-2">
                <span class="stat-icon soft-primary">
                    <i class="bi bi-person-plus"></i>
                </span>
                <div>
                    <div class="fw-bold">Información del doctor</div>
                    <small class="text-muted">Campos obligatorios marcados con *</small>
                </div>
            </div>
        </div>

        <div class="p-4">
            <!-- Errores generales -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <form asp-action="Create" method="post" autocomplete="off" class="form-modern">
                <div class="row g-3">

                    <div class="col-12 col-md-6">
                        <label asp-for="Nombre" class="form-label">
                            Nombre <span class="req">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-person"></i>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Karla" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Apellido" class="form-label">
                            Apellido <span class="req">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-person-badge"></i>
                            <input asp-for="Apellido" class="form-control" placeholder="Ej: Méndez" />
                        </div>
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="CodigoMed" class="form-label">
                            Código MED <span class="req">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-patch-check"></i>
                            <input asp-for="CodigoMed" class="form-control" placeholder="Ej: MED-10293" />
                        </div>
                        <span asp-validation-for="CodigoMed" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Telefono" class="form-label">
                            Teléfono <span class="req">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-telephone"></i>
                            <input asp-for="Telefono" class="form-control" placeholder="Ej: 8888-1111" />
                        </div>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Correo" class="form-label">
                            Correo
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-envelope"></i>
                            <input asp-for="Correo" class="form-control" placeholder="correo@clinica.com" />
                        </div>
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Especialidad" class="form-label">
                            Especialidad <span class="req">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-heart-pulse"></i>
                            <select asp-for="Especialidad" class="form-select form-control">
                                <option>Medicina General</option>
                                <option>Cardiología</option>
                                <option>Dermatología</option>
                                <option>Pediatría</option>
                            </select>
                        </div>
                        <span asp-validation-for="Especialidad" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Consultorio" class="form-label">
                            Consultorio
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-door-open"></i>
                            <input asp-for="Consultorio" class="form-control" placeholder="Ej: A-3" />
                        </div>
                        <span asp-validation-for="Consultorio" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label d-block">Estado</label>

                        <div class="ios-toggle">
                            <input asp-for="Activo" class="ios-toggle__input" />
                            <label asp-for="Activo" class="ios-toggle__track">
                                <span class="ios-toggle__thumb"></span>
                            </label>
                            <span class="ios-toggle__text">Doctor activo</span>
                        </div>

                        <span asp-validation-for="Activo" class="text-danger"></span>
                    </div>

                </div>

                <hr class="my-4" />

                <div class="d-flex flex-wrap gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-pill">
                        <i class="bi bi-x-circle me-2"></i> Cancelar
                    </a>

                    <button type="submit" class="btn btn-success btn-pill">
                        <i class="bi bi-save me-2"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
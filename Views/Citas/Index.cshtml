@model List<Sistema_de_Gestion_de_Citas_Medicas.ViewModels.CitaCreateVM>

@{
    ViewData["Title"] = "Gestión de Citas";

    var total = Model?.Count ?? 0;
    var activas = Model?.Count(x => x.Activa) ?? 0;
    var inactivas = total - activas;

    
    var hoy = DateTime.Today;
    var hoyCount = Model?.Count(x => x.Fecha.Date == hoy) ?? 0;
}

@section Styles {
    <link rel="stylesheet" href="~/css/citas.css" />
}

<div class="container-fluid py-4 citas-page">

    
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h1 class="page-title mb-1">Gestión de Citas</h1>
            <p class="page-subtitle mb-0">Agenda, visualiza y administra las citas médicas</p>
        </div>

        <a asp-action="Create" class="btn btn-dark btn-pill">
            <i class="bi bi-calendar-plus me-2"></i> Nueva Cita
        </a>
    </div>

   
    <div class="row g-3 mb-3">
        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Total Citas</div>
                    <div class="stat-value">@total</div>
                </div>
                <div class="stat-icon soft-primary"><i class="bi bi-calendar2-check"></i></div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Activas</div>
                    <div class="stat-value text-success">@activas</div>
                </div>
                <div class="stat-icon soft-success"><i class="bi bi-check2-circle"></i></div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Inactivas</div>
                    <div class="stat-value text-danger">@inactivas</div>
                </div>
                <div class="stat-icon soft-warning"><i class="bi bi-x-circle"></i></div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card">
                <div>
                    <div class="stat-label">Citas Hoy</div>
                    <div class="stat-value text-purple">@hoyCount</div>
                </div>
                <div class="stat-icon soft-purple"><i class="bi bi-clock-history"></i></div>
            </div>
        </div>
    </div>

  
    <div class="panel-card">
        
        <div class="panel-toolbar">
            <div class="searchbox">
                <i class="bi bi-search"></i>
                <input class="form-control" placeholder="Buscar por paciente, doctor, motivo o fecha..." />
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary btn-pill">
                    <i class="bi bi-funnel me-2"></i> Filtros
                </button>
                <button class="btn btn-outline-secondary btn-pill">
                    <i class="bi bi-download me-2"></i> Exportar
                </button>
            </div>
        </div>

        
        <div class="table-responsive">
            <table class="table table-modern mb-0">
                <thead>
                    <tr>
                        <th>Paciente</th>
                        <th>Doctor</th>
                        <th>Especialidad</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Motivo</th>
                        <th class="text-center">Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model == null || Model.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">
                                No hay citas registradas todavía.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var c in Model)
                        {
                            <tr>
                                
                                <td class="fw-semibold">
                                    <i class="bi bi-person me-2 text-muted"></i>Paciente #@c.PacienteId
                                </td>
                                <td>
                                    <i class="bi bi-person-badge me-2 text-muted"></i>Doctor #@c.DoctorId
                                </td>
                                <td>
                                    <i class="bi bi-heart-pulse me-2 text-muted"></i>Esp. #@c.EspecialidadId
                                </td>

                                <td>@c.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@c.Hora.ToString(@"hh\:mm")</td>
                                <td class="text-truncate" style="max-width: 260px;">@c.Motivo</td>

                                <td class="text-center">
                                    @if (c.Activa)
                                    {
                                        <span class="badge-pill badge-success">Activa</span>
                                    }
                                    else
                                    {
                                        <span class="badge-pill badge-warning">Inactiva</span>
                                    }
                                </td>

                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@c.Id" class="icon-btn" title="Ver">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@c.Id" class="icon-btn warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@c.Id" class="icon-btn danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        
        <div class="panel-footer">
            <small class="text-muted">Mostrando @total de @total citas</small>

            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary btn-sm btn-pill" disabled>Anterior</button>
                <button class="btn btn-outline-secondary btn-sm btn-pill">Siguiente</button>
            </div>
        </div>
    </div>
</div>
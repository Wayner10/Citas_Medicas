@model Sistema_de_Gestion_de_Citas_Medicas.ViewModels.CitaCreateVM

@{
    ViewData["Title"] = "Eliminar Cita";
}

@section Styles {
    <link rel="stylesheet" href="~/css/citas.css" />
}

<div class="container-fluid py-4 citas-page">

    
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h1 class="page-title mb-1">Eliminar Cita</h1>
            <p class="page-subtitle mb-0">Confirma si deseas eliminar esta cita médica</p>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary btn-pill">
            <i class="bi bi-arrow-left me-2"></i> Volver
        </a>
    </div>

   
    <div class="panel-card">
        
        <div class="panel-toolbar">
            <div class="d-flex align-items-center gap-2">
                <span class="stat-icon soft-warning" style="width:42px;height:42px;">
                    <i class="bi bi-exclamation-triangle"></i>
                </span>
                <div>
                    <div class="stat-label">Acción irreversible</div>
                    <div class="stat-value" style="font-size: 1.05rem;">Vas a eliminar la cita seleccionada</div>
                </div>
            </div>

            <div class="d-flex gap-2">
                @if (Model?.Activa ?? false)
                {
                    <span class="badge-pill badge-success">Activa</span>
                }
                else
                {
                    <span class="badge-pill badge-warning">Inactiva</span>
                }
            </div>
        </div>

        <div class="p-3 p-md-4">
            <div class="row g-3">
                <div class="col-12 col-md-4">
                    <div class="stat-card" style="height:100%;">
                        <div>
                            <div class="stat-label">Paciente</div>
                            <div class="stat-value" style="font-size:1.1rem;">
                                <i class="bi bi-person me-2 text-muted"></i>Paciente #@Model.PacienteId
                            </div>
                        </div>
                        <div class="stat-icon soft-primary"><i class="bi bi-person"></i></div>
                    </div>
                </div>

                <div class="col-12 col-md-4">
                    <div class="stat-card" style="height:100%;">
                        <div>
                            <div class="stat-label">Doctor</div>
                            <div class="stat-value" style="font-size:1.1rem;">
                                <i class="bi bi-person-badge me-2 text-muted"></i>Doctor #@Model.DoctorId
                            </div>
                        </div>
                        <div class="stat-icon soft-success"><i class="bi bi-person-badge"></i></div>
                    </div>
                </div>

                <div class="col-12 col-md-4">
                    <div class="stat-card" style="height:100%;">
                        <div>
                            <div class="stat-label">Especialidad</div>
                            <div class="stat-value" style="font-size:1.1rem;">
                                <i class="bi bi-heart-pulse me-2 text-muted"></i>Esp. #@Model.EspecialidadId
                            </div>
                        </div>
                        <div class="stat-icon soft-purple"><i class="bi bi-heart-pulse"></i></div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="stat-card" style="height:100%;">
                        <div>
                            <div class="stat-label">Fecha</div>
                            <div class="stat-value" style="font-size:1.1rem;">
                                <i class="bi bi-calendar3 me-2 text-muted"></i>@Model.Fecha.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="stat-icon soft-primary"><i class="bi bi-calendar3"></i></div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="stat-card" style="height:100%;">
                        <div>
                            <div class="stat-label">Hora</div>
                            <div class="stat-value" style="font-size:1.1rem;">
                                <i class="bi bi-clock me-2 text-muted"></i>@Model.Hora.ToString(@"hh\:mm")
                            </div>
                        </div>
                        <div class="stat-icon soft-warning"><i class="bi bi-clock"></i></div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="stat-card" style="height:100%;">
                        <div style="min-width:0;">
                            <div class="stat-label">Motivo</div>
                            <div class="stat-value" style="font-size:1.05rem; font-weight:600;">
                                <i class="bi bi-chat-left-text me-2 text-muted"></i>
                                <span class="text-truncate d-inline-block" style="max-width: 100%;">
                                    @Model.Motivo
                                </span>
                            </div>
                        </div>
                        <div class="stat-icon soft-danger"><i class="bi bi-chat-left-text"></i></div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="alert alert-warning mb-0" role="alert" style="border-radius: 14px;">
                        <i class="bi bi-info-circle me-2"></i>
                        Esta acción eliminará la cita del sistema. Si deseas conservarla, puedes cancelar.
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <small class="text-muted">Cita #@Model.Id</small>

            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary btn-pill">
                    <i class="bi bi-x-lg me-2"></i> Cancelar
                </a>

                <form asp-action="DeleteConfirmed" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />

                    <button type="submit" class="btn btn-dark btn-pill">
                        <i class="bi bi-trash me-2"></i> Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
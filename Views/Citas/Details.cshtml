@model Sistema_de_Gestion_de_Citas_Medicas.ViewModels.CitaCreateVM

@{
    ViewData["Title"] = "Detalle de Cita";
}

@section Styles {
    <link rel="stylesheet" href="~/css/citas.css" asp-append-version="true" />
}

<div class="container-fluid py-4 citas-page">

    
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h1 class="page-title mb-1">Detalle de la Cita</h1>
            <p class="page-subtitle mb-0">Información completa de la cita seleccionada</p>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-pill">
                <i class="bi bi-pencil me-2"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-pill">
                <i class="bi bi-arrow-left me-2"></i> Volver
            </a>
        </div>
    </div>

   
    <div class="panel-card p-4">

        <div class="row g-4">

            <div class="col-md-6">
                <div class="detail-item">
                    <span class="detail-label">Paciente</span>
                    <div class="detail-value">
                        <i class="bi bi-person me-2"></i>
                        Paciente #@Model.PacienteId
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="detail-item">
                    <span class="detail-label">Doctor</span>
                    <div class="detail-value">
                        <i class="bi bi-person-badge me-2"></i>
                        Doctor #@Model.DoctorId
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="detail-item">
                    <span class="detail-label">Especialidad</span>
                    <div class="detail-value">
                        <i class="bi bi-heart-pulse me-2"></i>
                        Especialidad #@Model.EspecialidadId
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="detail-item">
                    <span class="detail-label">Fecha</span>
                    <div class="detail-value">
                        <i class="bi bi-calendar-event me-2"></i>
                        @Model.Fecha.ToString("dd/MM/yyyy")
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="detail-item">
                    <span class="detail-label">Hora</span>
                    <div class="detail-value">
                        <i class="bi bi-clock me-2"></i>
                        @Model.Hora.ToString(@"hh\:mm")
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="detail-item">
                    <span class="detail-label">Motivo</span>
                    <div class="detail-value">
                        <i class="bi bi-chat-left-text me-2"></i>
                        @Model.Motivo
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="detail-item">
                    <span class="detail-label">Estado</span>
                    <div class="detail-value">
                        @if (Model.Activa)
                        {
                            <span class="badge-pill badge-success">Activa</span>
                        }
                        else
                        {
                            <span class="badge-pill badge-warning">Inactiva</span>
                        }
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>